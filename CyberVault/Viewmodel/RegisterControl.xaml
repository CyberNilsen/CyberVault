<UserControl x:Class="CyberVault.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="700" Width="1200">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="580"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2E3440" CornerRadius="10,0,0,10">
            <Grid>
                <StackPanel Margin="0,50,0,0">
                    <Image Source="/Images/coffe.png" Width="80" Height="80" HorizontalAlignment="Center"/>
                    <TextBlock Text="Register" HorizontalAlignment="Center" Margin="0,20,0,40" 
                             FontSize="36" FontWeight="SemiBold" FontFamily="Segoe UI" Foreground="White"/>

                    <StackPanel Margin="115,0">
                        <TextBlock Text="USERNAME" FontSize="14" FontWeight="SemiBold" 
                                 Foreground="#88FFFFFF" Margin="0,0,0,8"/>
                        <Border Background="#3B4252" CornerRadius="8" Margin="0,0,0,20">
                            <TextBox x:Name="UsernameInput" Style="{StaticResource ModernTextBox}" 
                                   Height="48" Foreground="White"/>
                        </Border>

                        <TextBlock Text="PASSWORD" FontSize="14" FontWeight="SemiBold" 
                                 Foreground="#88FFFFFF" Margin="0,0,0,8"/>
                        <Border Background="#3B4252" CornerRadius="8" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="PasswordInput" Grid.Column="0" 
                                           Style="{StaticResource ModernPasswordBox}" 
                                           Height="48" Foreground="White"
                                           PasswordChanged="PasswordInput_PasswordChanged"/>
                                <TextBox x:Name="PasswordVisible" Grid.Column="0"
                                       Style="{StaticResource ModernTextBox}"
                                       Height="48" Foreground="White"
                                       Visibility="Collapsed" 
                                       TextChanged="PasswordVisible_TextChanged"/>
                                <Button x:Name="TogglePasswordButton" Grid.Column="1" 
                                      Width="48" Height="48" Background="Transparent" 
                                      BorderThickness="0" Cursor="Hand"
                                      Click="TogglePasswordButton_Click">
                                    <Image Source="/Images/eyes.png" Width="22" Height="22"/>
                                </Button>
                            </Grid>
                        </Border>

                        <Border Background="#4C566A" CornerRadius="4" Margin="0,0,0,8">
                            <ProgressBar x:Name="PasswordStrengthBar" Height="8" 
                                       Minimum="0" Maximum="100" Value="0" 
                                       Foreground="#A3BE8C" Background="Transparent" 
                                       BorderThickness="0"/>
                        </Border>
                        <TextBlock x:Name="PasswordStrengthMessage" 
                                 HorizontalAlignment="Right" 
                                 FontSize="13" Foreground="#88FFFFFF" 
                                 FontFamily="Segoe UI" Margin="0,0,0,25"/>

                        <Button Content="Register" Style="{StaticResource ActionButton}" 
                              Background="#5E81AC" Height="50" 
                              Click="RegisterButton_Click"/>

                        <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="14" Foreground="#88FFFFFF">
                            <Run Text="Already have an account? "/>
                            <TextBlock Text="Login" Foreground="#88AEEF" FontWeight="SemiBold" Cursor="Hand" 
                                     MouseLeftButtonDown="LoginTextBlock_MouseLeftButtonDown"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="#ECEFF4" CornerRadius="0,10,10,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button x:Name="MinimizeButton" Style="{StaticResource MinimizeButton}" Click="MinimizeButton_Click">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>
                    <Button x:Name="CloseButton" Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>
                </StackPanel>

                <StackPanel VerticalAlignment="Center">
                    <Image Source="/Images/coffe.png" Width="180" Height="180" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <TextBlock Text="Welcome to" FontSize="36" Foreground="#4C566A" 
                             HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="CyberVault" FontSize="54" FontWeight="Bold" Foreground="#5E81AC" 
                             HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Create your secure account" FontSize="18" Foreground="#4C566A" 
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>