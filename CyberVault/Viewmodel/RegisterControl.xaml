<UserControl x:Class="CyberVault.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="580"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#853E3E">
            <TextBlock Text="Register" HorizontalAlignment="Center" Margin="0,83,0,507" FontSize="80" FontFamily="Segoe UI" Foreground="White"/>
            <TextBlock Text="Username" HorizontalAlignment="Left" Margin="111,210,0,455" FontSize="20" FontFamily="Segoe UI" Foreground="White"/>
            <Border Background="#F5F5F5" CornerRadius="15" Width="350" HorizontalAlignment="Center" BorderBrush="#F5F5F5" BorderThickness="2" Padding="5" Margin="0,250,0,400">
                <TextBox x:Name="UsernameInput" Width="340" FontSize="18" Background="Transparent" BorderThickness="0" Padding="5"/>
            </Border>
            <TextBlock Text="Password" HorizontalAlignment="Left" Margin="115,305,0,369" FontSize="20" FontFamily="Segoe UI" Foreground="White"/>
            <Border Background="#F5F5F5" CornerRadius="15" Width="350" HorizontalAlignment="Center" BorderBrush="#F5F5F5" BorderThickness="2" Padding="5" Margin="0,345,0,305">
                <Grid>
                    <PasswordBox x:Name="PasswordInput" Width="310" HorizontalAlignment="Left" FontSize="18" Background="Transparent" BorderThickness="0" Padding="5" PasswordChanged="PasswordInput_PasswordChanged"/>
                    <TextBox x:Name="PasswordVisible" Width="310" HorizontalAlignment="Left" FontSize="18" Background="Transparent" BorderThickness="0" Padding="5" Visibility="Collapsed" TextChanged="PasswordVisible_TextChanged"/>
                    <Button x:Name="TogglePasswordButton" Width="30" Height="30" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Click="TogglePasswordButton_Click" Cursor="Hand">
                        <Image Source="/Images/eyes.png" Stretch="Uniform" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Border>
            <ProgressBar x:Name="PasswordStrengthBar" Width="340" Height="10" Margin="120,406,120,284" Minimum="0" Maximum="100" Value="0" Foreground="Green" Background="LightGray"/>
            <TextBlock x:Name="PasswordStrengthMessage" HorizontalAlignment="Left" Margin="231,416,0,250" FontSize="18" Foreground="White" FontFamily="Segoe UI" Width="201"/>
            <Button Content="Register" Width="150" Height="40" HorizontalAlignment="Center" Margin="0,494,0,146" FontSize="20" FontFamily="Segoe UI" Foreground="Black" Background="#FFBA7E" BorderThickness="0" Cursor="Hand" Click="RegisterButton_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,455,0,205" FontSize="22" Foreground="White" FontFamily="Sitka Text">
        <Run Text="Already have an account? "/>
        <TextBlock Text="Login" Foreground="Blue" Cursor="Hand" MouseLeftButtonDown="LoginTextBlock_MouseLeftButtonDown"/>
      </TextBlock>
        </Grid>
        <Grid Grid.Column="1" Background="#E7D3D3">
            <Image Margin="103,-35,0,312" Source="/Images/coffe.png" Stretch="Fill" HorizontalAlignment="Left" Width="386"/>
            <Grid>
                <TextBlock Foreground="#8C5B0E" HorizontalAlignment="Center" Margin="0,332,0,48" FontSize="80" FontFamily="Segoe UI" Width="568" FontWeight="Black">
          <Run Text="Welcome "/>
          <LineBreak/>
          <Run Text="to "/>
          <Run Text="CyberVault"/>
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
