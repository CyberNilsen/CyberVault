<UserControl x:Class="CyberVault.Viewmodel.HomeDashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CyberVault.Viewmodel"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="QuoteText" Text="☕ Strong passwords and strong coffee: two things you should never compromise." 
                   FontSize="14" Foreground="#2E3440" TextWrapping="Wrap" Margin="0,0,0,0">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="1" Opacity="0.1" Color="#4C566A"/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBlock Grid.Row="0" Text="Dashboard Overview" 
                   FontWeight="Bold" FontSize="20" Foreground="#2E3440" Margin="0,35,0,0">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2" Color="#4C566A"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border Grid.Row="3" Background="#3B4252" CornerRadius="8" Margin="0,18,0,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.3" Color="#2E3440"/>
            </Border.Effect>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#434C5E" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Border.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#3B4252" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#3B4252" CornerRadius="8" Margin="0,20,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.3" Color="#2E3440"/>
            </Border.Effect>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#434C5E" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Border.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#3B4252" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Browser Extension Key" 
                           FontWeight="SemiBold" FontSize="16" Foreground="White" Margin="0,0,0,10">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3" Color="#1A1E26"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Grid.Row="1" Text="Copy the key below to connect your browser extension with CyberVault." 
                           FontSize="14" Foreground="#AAFFFFFF" TextWrapping="Wrap" Margin="0,0,0,15"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#434C5E" CornerRadius="6" Padding="10" Grid.ColumnSpan="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.2" Color="#1A1E26"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock x:Name="ExtensionKeyText" Text="Loading key..." Foreground="White" 
                                   FontFamily="Consolas" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                   Visibility="Collapsed"/>
                            <TextBlock x:Name="MaskedKeyText" Text="••••••••••••••••••••••••••" Foreground="White" 
                                   FontFamily="Consolas" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                   Visibility="Visible"/>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1" x:Name="ToggleKeyVisibilityButton" Margin="10,0,0,0" Padding="10"
                            Background="#434C5E" Foreground="White" BorderThickness="0"
                            Click="ToggleKeyVisibilityButton_Click" Style="{StaticResource ImageButtonStyle}">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="#1A1E26"/>
                        </Button.Effect>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7B3;" FontSize="18" Foreground="White"/>
                    </Button>

                    <Button Grid.Column="2" x:Name="CopyKeyButton" Content="Copy Key" Margin="10,0,0,0" Padding="15,10"
                            Background="#5E81AC" Foreground="White" FontWeight="SemiBold"
                            Click="CopyKeyButton_Click" Style="{StaticResource HomeDashboardButton}">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="#1A1E26"/>
                        </Button.Effect>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#81A1C1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="8" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.5" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#5E81AC" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="5" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.3" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#3B4252" CornerRadius="8" Margin="0,20,0,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.3" Color="#2E3440"/>
            </Border.Effect>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#434C5E" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Border.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#3B4252" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Software Updates" 
                           FontWeight="SemiBold" FontSize="16" Foreground="White" Margin="0,0,0,10">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3" Color="#1A1E26"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Grid.Column="1" x:Name="CurrentVersionText" Text="v2.0" 
                           FontWeight="Regular" FontSize="14" Foreground="#AAFFFFFF" Margin="0,0,0,10"/>
                </Grid>

                <TextBlock Grid.Row="1" Text="CyberVault automatically checks for updates." 
                           FontSize="14" Foreground="#AAFFFFFF" TextWrapping="Wrap" Margin="0,0,0,15"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="UpdateStatusText" Text="Checking for updates..." Foreground="White" 
                               VerticalAlignment="Center" TextWrapping="Wrap" Margin="0,0,291,0"/>

                    <Button Grid.Column="1" x:Name="UpdateNowButton" Content="Update Now" Margin="10,0,0,0" Padding="15,10"
                            Background="Green" Foreground="White" FontWeight="SemiBold"
                            Click="UpdateNowButton_Click" Style="{StaticResource GreenUpdateButton}" Visibility="Collapsed">
                        <Button.Resources>
                            <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#43A047" Offset="0"/>
                                <GradientStop Color="#66BB6A" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="#1A1E26"/>
                        </Button.Effect>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="8" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.5" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="5" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.3" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>

                    <Button Grid.Column="2" x:Name="CheckUpdateButton" Content="Check Now" Padding="15,10"
                            Background="#5E81AC" Foreground="White" FontWeight="SemiBold"
                            Click="CheckUpdateButton_Click" Style="{StaticResource HomeDashboardButton}" Margin="10,0,0,0">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="#1A1E26"/>
                        </Button.Effect>
                        <Button.Resources>
                            <LinearGradientBrush x:Key="MainGradient" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5E81AC" Offset="0"/>
                                <GradientStop Color="#81A1C1" Offset="1"/>
                            </LinearGradientBrush>
                            <LinearGradientBrush x:Key="HoverGradient" StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#81A1C1" Offset="0"/>
                                <GradientStop Color="#88C0D0" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Resources>
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="8" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.5" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="5" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.3" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>