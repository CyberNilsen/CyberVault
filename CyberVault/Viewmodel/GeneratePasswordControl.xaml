<UserControl x:Class="CyberVault.Viewmodel.GeneratePasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CyberVault.Viewmodel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                           From="30" To="0" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GreenUpdateButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#16A34A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#15803D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                CornerRadius="10" Padding="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Background" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Content" Value="OFF"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Content" Value="ON"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#94A3B8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
        </Style>

        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <UserControl.RenderTransform>
        <TranslateTransform Y="0"/>
    </UserControl.RenderTransform>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FAFBFC" Offset="0"/>
                <GradientStop Color="#F1F5F9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="16" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" CornerRadius="16,16,0,0" Padding="30,25">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1E293B" Offset="0"/>
                            <GradientStop Color="#334155" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#475569" CornerRadius="20" Width="50" Height="50" 
                                VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72E;" 
                                       FontSize="24" Foreground="#60A5FA" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Generate Secure Password" 
                                       FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                            <TextBlock Text="Create strong, unique passwords for maximum security" 
                                       FontSize="14" Foreground="#94A3B8"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,25">
                    <StackPanel>

                        <Border Background="#F8FAFC" CornerRadius="12" Padding="20" Margin="0,0,0,25"
                                BorderBrush="#E2E8F0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                    <Border Background="#3B82F6" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B7;" 
                                                   FontSize="16" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Generated Password" 
                                               FontSize="16" FontWeight="Bold" Foreground="#1E293B" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="White" CornerRadius="10" 
                                            BorderBrush="#D1D5DB" BorderThickness="1" Padding="16,12">
                                        <TextBox x:Name="GeneratedPasswordTextBox" 
                                                 Text="Click 'Generate Password' to create a secure password"
                                                 FontFamily="Consolas" FontSize="14" 
                                                 Foreground="#374151" Background="Transparent" 
                                                 BorderThickness="0" IsReadOnly="True"/>
                                    </Border>

                                    <Button Grid.Column="1" Style="{StaticResource IconButton}" 
                                            Margin="12,0,0,0" Click="CopyPassword_Click" ToolTip="Copy to Clipboard">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" 
                                                   FontSize="16" Foreground="White"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,25"
                                BorderBrush="#E2E8F0" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <Border Background="#F59E0B" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" 
                                                   FontSize="16" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Password Configuration" Style="{StaticResource SectionTitle}" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Password Length:" Style="{StaticResource SettingLabel}"/>
                                    <Slider Grid.Column="1" x:Name="LengthSlider" Minimum="8" Maximum="128" Value="16" 
                                            TickFrequency="1" IsSnapToTickEnabled="True" Margin="15,0,15,0"/>
                                    <Border Grid.Column="2" Background="#EFF6FF" CornerRadius="6" Padding="8,4"
                                            BorderBrush="#3B82F6" BorderThickness="1">
                                        <TextBlock Text="{Binding ElementName=LengthSlider, Path=Value}" 
                                                   FontWeight="Bold" Foreground="#1E40AF" HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Uppercase Letters (A-Z)" Style="{StaticResource SettingLabel}"/>
                                            <ToggleButton Grid.Column="1" x:Name="UppercaseToggle" Style="{StaticResource SettingToggle}" IsChecked="True"/>
                                        </Grid>

                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Lowercase Letters (a-z)" Style="{StaticResource SettingLabel}"/>
                                            <ToggleButton Grid.Column="1" x:Name="LowercaseToggle" Style="{StaticResource SettingToggle}" IsChecked="True"/>
                                        </Grid>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Numbers (0-9)" Style="{StaticResource SettingLabel}"/>
                                            <ToggleButton Grid.Column="1" x:Name="NumbersToggle" Style="{StaticResource SettingToggle}" IsChecked="True"/>
                                        </Grid>

                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Special Characters (!@#$%)" Style="{StaticResource SettingLabel}"/>
                                            <ToggleButton Grid.Column="1" x:Name="SpecialToggle" Style="{StaticResource SettingToggle}" IsChecked="True"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,25"
                                BorderBrush="#E2E8F0" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <Border Background="#8B5CF6" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B9;" 
                                                   FontSize="16" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Advanced Options" Style="{StaticResource SectionTitle}" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Exclude Similar Characters (0, O, l, 1, I)" Style="{StaticResource SettingLabel}"/>
                                    <ToggleButton Grid.Column="1" x:Name="ExcludeSimilarToggle" Style="{StaticResource SettingToggle}"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Exclude Ambiguous Characters" Style="{StaticResource SettingLabel}"/>
                                    <ToggleButton Grid.Column="1" x:Name="ExcludeAmbiguousToggle" Style="{StaticResource SettingToggle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="White" CornerRadius="12" Padding="25"
                                BorderBrush="#E2E8F0" BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Border x:Name="StrengthIcon" Background="#10B981" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE83F;" 
                                                       FontSize="16" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Password Strength" Style="{StaticResource SectionTitle}" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock x:Name="StrengthPercentage" Text="85%" 
                                                   FontWeight="Bold" Foreground="#64748B" FontSize="14" 
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="StrengthLabel" Text="Very Strong" 
                                                   FontWeight="Bold" Foreground="#10B981" FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>

                                <Border Background="#F1F5F9" CornerRadius="12" Height="16" Padding="3">
                                    <Grid>
                                        <Border Background="#E2E8F0" CornerRadius="9" Height="10"/>
                                        <Border x:Name="StrengthIndicator" Background="#10B981" CornerRadius="9" Height="10"
                                                HorizontalAlignment="Left" Width="0" MinWidth="20">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#10B981" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                            </Border.Effect>
                                        </Border>
                                    </Grid>
                                </Border>

                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <Border x:Name="WeakIndicator" Background="#EF4444" Width="8" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                        <TextBlock Text="Weak" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Border x:Name="FairIndicator" Background="#E5E7EB" Width="8" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                        <TextBlock Text="Fair" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <Border x:Name="GoodIndicator" Background="#E5E7EB" Width="8" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                        <TextBlock Text="Good" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <Border x:Name="StrongIndicator" Background="#E5E7EB" Width="8" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                        <TextBlock Text="Strong" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="0,0,16,16" Padding="30,20"
                        BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" Style="{StaticResource ModernButton}" 
                                Padding="24,12" Margin="0,0,15,0" FontSize="14"
                                Click="GeneratePassword_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72E;" 
                                           FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Generate Password" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" Style="{StaticResource GreenUpdateButton}" 
                                Padding="24,12" FontSize="14"
                                Click="CopyPassword_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" 
                                           FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Copy Password" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>