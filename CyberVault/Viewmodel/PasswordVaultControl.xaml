<UserControl x:Class="CyberVault.View.PasswordVaultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CyberVault.View"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Background="#853E3E">
            <!-- Coffee Cup Logo -->
            <Image Margin="0,20,0,0" Source="/Images/coffe.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="100" />

            <!-- Create/Save Password Button -->
            <Button Name="CreateSavePassword"
                    Content="Create/Save Password"
                    FontFamily="Segoe UI"
                    FontSize="18"
                    Width="250"
                    Height="50"
                    VerticalAlignment="Top"
                    Margin="25,140,25,0"
                    Background="White"
                    Foreground="Black"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CreateSavePassword_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E69A5B" />
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Password List -->
            <TextBlock Text="Saved Passwords" Foreground="White" FontSize="18" FontWeight="SemiBold" 
                     HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top"/>

            <ListBox Name="PasswordListBox"
                     ItemsSource="{Binding SavedPasswords}"
                     VerticalAlignment="Top"
                     Margin="10,245,10,0"
                     Height="Auto"
                     SelectionChanged="PasswordListBox_SelectionChanged"
                     Background="Transparent"
                     BorderBrush="#853E3E"
                     HorizontalContentAlignment="Center"
                     FontSize="18">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="ItemBorder"
                                            Background="White"
                                            BorderThickness="0"
                                            CornerRadius="10"
                                            SnapsToDevicePixels="True"
                                            Height="40"
                                            BorderBrush="White">
                                        <Border.Effect>
                                            <DropShadowEffect x:Name="ItemDropShadow"
                                                Color="Black"
                                                BlurRadius="10"
                                                ShadowDepth="5"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="ItemBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1.05" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="ItemBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1.05" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="ItemBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="ItemBorder"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#E69A5B"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>

       
        <Grid Grid.Column="1" Background="#E7D3D3">
            
            

            <Grid x:Name="CreatePasswordGrid" Margin="40,30,40,30" Background="#E7D3D3" Opacity="1" Visibility="Visible">
                <TextBlock Text="Password Details" FontWeight="Bold" FontSize="28" Foreground="#853E3E" 
                         HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,40"/>

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Password Name:" FontWeight="Bold" FontSize="24" Grid.Row="0" Grid.Column="0" Margin="10,20,20,20" VerticalAlignment="Center" />
                    <Border Background="#F5F5F5" CornerRadius="15" Width="350" Height="45" HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="10" Grid.Column="1">
                        <TextBox x:Name="PasswordNameTextBox" Width="330" FontSize="18" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
                    </Border>

                    <TextBlock Text="Website:" FontWeight="Bold" FontSize="24" Grid.Row="1" Grid.Column="0" Margin="10,20,20,20" VerticalAlignment="Center" />
                    <Border Background="#F5F5F5" CornerRadius="15" Width="350" Height="45" HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="10" Grid.Column="1" Grid.Row="1">
                        <TextBox x:Name="WebsiteTextBox" Width="330" FontSize="18" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
                    </Border>

                    <TextBlock Text="Email:" FontWeight="Bold" FontSize="24" Grid.Row="2" Grid.Column="0" Margin="10,20,20,20" VerticalAlignment="Center" />
                    <Border Background="#F5F5F5" CornerRadius="15" Width="350" Height="45" HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="10" Grid.Column="1" Grid.Row="2">
                        <TextBox x:Name="EmailTextBox" Width="330" FontSize="18" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
                    </Border>

                    <TextBlock Text="Username:" FontWeight="Bold" FontSize="24" Grid.Row="3" Grid.Column="0" Margin="10,20,20,20" VerticalAlignment="Center" />
                    <Border Background="#F5F5F5" CornerRadius="15" Width="350" Height="45" HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="10" Grid.Column="1" Grid.Row="3">
                        <TextBox x:Name="UsernameTextBox" Width="330" FontSize="18" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
                    </Border>

                  
                    <TextBlock Text="Password:" FontWeight="Bold" FontSize="24" Grid.Row="4" Grid.Column="0" Margin="10,20,20,20" VerticalAlignment="Center"/>
                    <Border Background="#F5F5F5" CornerRadius="15" Width="350" Height="45" HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="10" Grid.Row="4" Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <PasswordBox x:Name="NewPasswordBox" Grid.Column="0" Width="310" FontSize="18" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" />
                            <TextBox x:Name="PlainTextPassword" Grid.Column="0" Width="310" FontSize="18" Background="Transparent" BorderThickness="0" Visibility="Collapsed" VerticalContentAlignment="Center" />
                            <Image x:Name="EyeIcon" 
                                   Grid.Column="1" 
                                   Source="/Images/eyes.png" 
                                   Width="22" 
                                   Height="22" 
                                   Margin="5,0,5,0" 
                                   Cursor="Hand" 
                                   VerticalAlignment="Center"
                                   MouseDown="TogglePasswordVisibility_Click"/>
                        </Grid>
                    </Border>

                   
                    <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,30,10,10">
                        <Button Content="Save" Background="#FFBA7E" Width="140" Height="45" Margin="10" FontSize="20" Click="SavePassword_Click" Foreground="Black">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E69A5B" />
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0.5" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Delete" Background="#FF6666" Width="140" Height="45" Margin="10" FontSize="20" Click="DeletePassword_Click" Foreground="White">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF4040" />
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0.5" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Close" Background="#A0A0A0" Width="140" Height="45" Margin="10" FontSize="20" Click="CloseCreatePassword_Click" Foreground="White">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#808080" />
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0.5" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Delete Confirmation Modal -->
            <Grid x:Name="DeleteConfirmationGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Background="#AA000000" Opacity="0" Visibility="Collapsed">
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Width="450" Height="220" CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" />
                    </Border.Effect>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Are you sure you want to delete this password?" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" Grid.Row="0" />
                        <TextBlock x:Name="PasswordNameConfirmationText" Text="{Binding ElementName=PasswordNameTextBox, Path=Text}" FontSize="20" HorizontalAlignment="Center" Margin="10,20" Grid.Row="1" Foreground="#853E3E" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="10,20,10,10">
                            <Button Content="Yes" Width="120" Height="40" Margin="10,0" Click="ConfirmDeleteYes_Click" Background="#FF6666" Foreground="White" FontSize="18">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF4040" />
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0.5" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="No" Width="120" Height="40" Margin="10,0" Click="ConfirmDeleteNo_Click" Background="#A0A0A0" Foreground="White" FontSize="18">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#808080" />
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0.5" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>