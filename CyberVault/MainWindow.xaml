<Window x:Class="CyberVault.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:CyberVault"
            mc:Ignorable="d"
             Title="CyberVault" Height="700" Width="1200"
             WindowStyle="None"  
             ResizeMode="NoResize"
             Background="Transparent"
             AllowsTransparency="True"
             WindowStartupLocation="CenterScreen"
             Icon="pack://application:,,,/Images/CyberVault.ico">

    <Border Background="White" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="580"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#853E3E">
                
                <PasswordBox x:Name="PasswordInput" 
                               Width="350" 
                               HorizontalAlignment="Center"
                               Margin="0,350,0,305" 
                               FontSize="18" 
                               Background="White"
                               BorderBrush="Black"
                               BorderThickness="2"
                               Padding="5" 
                               PasswordChanged="PasswordInput_PasswordChanged"/>
            </Grid>

            <Grid>
                <TextBlock Text="Register"  HorizontalAlignment="Center" Margin="0,83,0,516" FontSize="80" FontFamily="Showcard Gothic"/>
            </Grid>

            <Grid Grid.Column="1" Background="#E7D3D3">
                <Image Margin="103,0,0,277" Source="/Images/coffe.png" Stretch="Fill" HorizontalAlignment="Left" Width="386"/>

                <Grid>
                    <TextBlock Foreground="#8C5B0E" HorizontalAlignment="Left" Margin="80,350,0,30" FontSize="80" FontFamily="Segoe UI" Width="506" ><Run Language="nb-no" Text="   "/><Run Text="Welcome "/><LineBreak/><Run Text="to "/><Run Text="C"/><Run Text="yberVault"/></TextBlock>
                </Grid>

                <Rectangle Margin="0,-293,283,293" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Margin="0,438,283,-168" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Margin="0,-193,-272,393" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Margin="0,493,-272,-113" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

            </Grid>

            <Grid>
                <TextBlock Text="Username" HorizontalAlignment="Left" Margin="111,210,0,455" FontSize="20" FontFamily="Sitka Text"/>

                <TextBox   x:Name="UsernameInput" 
                               Width="350" 
                               HorizontalAlignment="Center"
                               Margin="0,250,0,400" 
                               FontSize="18" 
                               Background="White"
                               BorderBrush="Black"
                               BorderThickness="2"
                               Padding="5" 
                               TextChanged="UsernameInput_TextChanged">
                </TextBox>

                <TextBlock Text="Password" 
                               HorizontalAlignment="Left" 
                               Margin="115,305,0,369" 
                               FontSize="20" 
                               FontFamily="Sitka Text"
                               Foreground="Black"/>

                <TextBlock HorizontalAlignment="Center" 
                               Margin="0,433,0,231" 
                               FontSize="22"
                               Foreground="White"
                               FontFamily="Sitka Text">
                            <Run Text="Already have an account? " />
                            <Run Text="Login" Foreground="Blue" Cursor="Hand"/>
                </TextBlock>

                <Button Content="Register" 
                            Width="150" Height="40"
                            HorizontalAlignment="Center"
                            Margin="0,502,0,158"
                            FontSize="20"
                            Foreground="Black"
                            Background="#FFBA7E"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Button_Click"/>
            </Grid>

            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="1100" Height="66" Grid.ColumnSpan="2">
                <TextBlock MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="24" Margin="234,202,0,0"/>
            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                <Button x:Name="CloseButton" Content="X" Width="30" Height="30" Click="CloseButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="9">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="Red" />
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Background" Value="#FFBA7E"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,50,0">
                <Button Content="-" Width="30" Height="30" Click="MinimizeButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="9">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Background" Value="#FFBA7E"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="24"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>