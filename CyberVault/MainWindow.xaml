<Window x:Class="CyberVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberVault"
        mc:Ignorable="d"
        Title="CyberVault" Height="700" Width="1200"
        WindowStyle="None"  
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Images/CyberVault.ico">

    <Border Background="White" CornerRadius="20" ClipToBounds="True" MouseDown="Window_MouseDown">
        <Border.Clip>
            <RectangleGeometry Rect="0,0,1200,700" RadiusX="15" RadiusY="15"/>
        </Border.Clip>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="580"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#853E3E">
                <TextBlock Text="Register"  
                           HorizontalAlignment="Center" 
                           Margin="0,83,0,507" 
                           FontSize="80" 
                           FontFamily="Segoe UI" 
                           Foreground="White"/>

                <TextBlock Text="Password" 
                           HorizontalAlignment="Left" 
                           Margin="115,305,0,369" 
                           FontSize="20" 
                           FontFamily="Segoe UI"
                           Foreground="White"/>

                <!-- Updated Password Input Border with Toggle Button -->
                <Border Background="#F5F5F5" 
                        CornerRadius="15" 
                        Width="350" 
                        HorizontalAlignment="Center"
                        BorderBrush="#F5F5F5" 
                        BorderThickness="2" 
                        Padding="5" 
                        Margin="0,345,0,305">
                    <Grid>
                        <PasswordBox x:Name="PasswordInput" 
                                     Width="310" 
                                     HorizontalAlignment="Left"
                                     FontSize="18" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="5" 
                                     PasswordChanged="PasswordInput_PasswordChanged"/>

                        <TextBox x:Name="PasswordVisible" 
                                 Width="310"
                                 HorizontalAlignment="Left"
                                 FontSize="18"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="5"
                                 Visibility="Collapsed"
                                 TextChanged="PasswordVisible_TextChanged"/>

                        <Button x:Name="TogglePasswordButton" 
                                Width="30" 
                                Height="30" 
                                HorizontalAlignment="Right" 
                                Background="Transparent"
                                BorderThickness="0"
                                Click="TogglePasswordButton_Click"
                                Cursor="Hand">
                            <Image Source="/Images/eyes.png" 
                                   Stretch="Uniform" 
                                   Width="20" 
                                   Height="20"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Password Strength elements -->
                <ProgressBar x:Name="PasswordStrengthBar" 
                             Width="340" 
                             Height="10" 
                             Margin="120,406,120,284" 
                             Minimum="0" 
                             Maximum="100" 
                             Value="0" 
                             Foreground="Green" 
                             Background="LightGray"/>
                <TextBlock x:Name="PasswordStrengthMessage"
                           HorizontalAlignment="Left"
                           Margin="231,416,0,250"
                           FontSize="18"
                           Foreground="White"
                           FontFamily="Segoe UI" Width="201"/>


                <TextBlock Text="Username" 
                           HorizontalAlignment="Left" 
                           Margin="111,210,0,455" 
                           FontSize="20" 
                           FontFamily="Segoe UI" 
                           Foreground="White"/>

                <Border Background="#F5F5F5" 
                        CornerRadius="15" 
                        Width="350" 
                        HorizontalAlignment="Center"
                        BorderBrush="#F5F5F5" 
                        BorderThickness="2" 
                        Padding="5" 
                        Margin="0,250,0,400">
                    <TextBox x:Name="UsernameInput" 
                             Width="340" 
                             FontSize="18" 
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="5" 
                             TextChanged="UsernameInput_TextChanged"/>
                </Border>

                <TextBlock HorizontalAlignment="Center" 
                           Margin="0,455,0,205"
                           FontSize="22"
                           Foreground="White"
                           FontFamily="Sitka Text">
                    <Run Text="Already have an account? " />
                    <TextBlock Text="Login"
                               Foreground="Blue"
                               Cursor="Hand"
                               MouseLeftButtonDown="LoginTextBlock_MouseLeftButtonDown">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </TextBlock>

                <Button Content="Register" 
                        Width="150" Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,494,0,146"
                        FontSize="20"
                        FontFamily="Segoe UI"
                        Foreground="Black"
                        Background="#FFBA7E"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Button_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFBA7E"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E69A5B"/>
                                                <Setter TargetName="border" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Grid Grid.Column="1" Background="#E7D3D3">
                <Image Margin="103,-35,0,312" Source="/Images/coffe.png" Stretch="Fill" HorizontalAlignment="Left" Width="386"/>

                <Grid>
                    <TextBlock Foreground="#8C5B0E" 
                               HorizontalAlignment="Center" 
                               Margin="0,332,0,48" 
                               FontSize="80" 
                               FontFamily="Segoe UI" 
                               Width="568" 
                               FontWeight="Black">
                        <Run Text="   "/><Run Language="nb-no" Text=" "/><Run Text="Welcome "/><LineBreak/><Run Text="to "/><Run Text="C"/><Run Text="yberVault"/>
                    </TextBlock>
                </Grid>

                <Rectangle Margin="0,-293,283,293" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Margin="0,438,283,-168" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Margin="0,-193,-272,393" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Margin="0,493,-272,-113" HorizontalAlignment="Right" Width="620">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="None">
                            <VisualBrush.Visual>
                                <Border CornerRadius="100,100,100,100"  Width="200" Height="200" Background="#FFBA7E" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                    <Button x:Name="CloseButton" Content="X" Width="30" Height="30" Click="CloseButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="9">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="Red" />
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Setter Property="Background" Value="#FFBA7E"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="20"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,50,0">
                    <Button Content="-" Width="30" Height="30" Click="MinimizeButton_Click" Margin="10,0,-10,0">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="9">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="LightGray"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Setter Property="Background" Value="#FFBA7E"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="24"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>